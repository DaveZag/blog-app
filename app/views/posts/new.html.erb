<section class="card new-post-container">
  <header><h2 class="form-title">Create a new post</h2></header>
  <%=form_with model: @post, url: user_posts_path, class: 'form', scope: :post do |form|%>
    <div class="form-post-title flex">
      <%= form.label :title%>
      <%= form.text_field :title%>
    </div>
    <div class="form-post-text flex">
      <%= form.label :text %>
      <%= form.text_area :text %>
    </div>
    <%= form.submit "Create", class: 'btn'%>
  <%end%>
</section>
